{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "rootDir": "src",
    "outDir": "dist",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  }
}